datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model UserPost {
  author      String?
  content     String?
  createdAt   DateTime  @default(now())
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  postId      String?
  publishedAt DateTime?
  title       String?
  updatedAt   DateTime  @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
